<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tranthuong.fetchapp.MainActivity"
    android:background="@android:color/white">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/app_name"
        android:id="@+id/textView2"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:background="@color/main_bg_color" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fetch_from_server_title"
        android:id="@+id/fetchFromServerBt_id"
        android:textColor="@android:color/white"
        android:textSize="@dimen/home_title_text_size"
        android:background="@drawable/round_rect_bt_bg"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:visibility="visible"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:layout_centerInParent="true" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="30dp"
        android:paddingBottom="30dp"
        android:background="@drawable/round_rect_bt_bg"
        android:visibility="gone"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:id="@+id/progressPanel_id"
        android:paddingLeft="90dp"
        android:paddingRight="90dp"
        android:layout_centerInParent="true">

        <ProgressBar
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar"
            android:layout_gravity="center" />
    </LinearLayout>

</RelativeLayout>
